# XRPL Offline Payments - Environment Configuration
# Copy this file to .env and fill in your values

# ===== Merchant Configuration =====
# CRITICAL: Generate a NEW seed for production using tools/generate_merchant_wallet.py
# NEVER commit your real seed to version control!
MERCHANT_SEED=sEdVqH1234567890abcdefghijk

# JWT secret for authentication (change in production!)
JWT_SECRET=change_this_to_a_random_64_char_string_in_production_12345678

# ===== API Configuration =====
NODE_ENV=production
PORT=3000

# ===== Database Configuration =====
# MongoDB connection string
MONGODB_URI=mongodb://admin:xccepta_dev_2024@mongodb:27017/xcceptapay?authSource=admin

# Redis for caching and rate limiting
REDIS_URL=redis://redis:6379

# Enable database (set to 'false' to use in-memory storage for testing)
USE_DB=true

# ===== XRPL Network Configuration =====
# Testnet (for development and demos)
RPC_URL=wss://s.altnet.rippletest.net:51233

# Mainnet (for production - ONLY use with real funds!)
# RPC_URL=wss://xrplcluster.com

# ===== Security & Operation Settings =====
# Disable auth for development (NEVER use 'true' in production!)
DEV_NO_AUTH=true

# Simulate settlements without submitting to XRPL (for testing)
DEV_SIMULATE_SETTLEMENT=false

# Signature verification mode: auto, strict, or dev
DEV_SIG_VERIFY_MODE=auto

# Maximum unsettled amount per device (in drops, 1 XRP = 1,000,000 drops)
EXPOSURE_CAP_DROPS=3000000

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Frontend Configuration =====
REACT_APP_API_URL=/api

# ===== Logging =====
LOG_LEVEL=info
LOG_FILE=./logs/api.log

# ===== Notifications (Optional) =====
# Webhook URL for settlement notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/xrpl-settlement

# Email notifications (using SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ===== Analytics (Optional) =====
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X
